@model Tp8.ViewModels.ProductoViewModel

<div class="container">
    <h2>Editar producto</h2>

    <form asp-controller="Productos" asp-action="Edit" method="post">
        <!-- Campo oculto con el ID -->
        <input type="hidden" asp-for="IdProducto" />

        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label">Descripci√≥n:</label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-info"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="Precio" class="form-label">Precio:</label>
            <input asp-for="Precio" class="form-control" type="number" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Guardar cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</div>
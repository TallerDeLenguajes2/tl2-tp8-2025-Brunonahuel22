@model Tp8.Models.Presupuestos

<div class="container">
    <h2>Editar presupuesto</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="idPresupuesto" />

        <div class="mb-3">
            <label asp-for="nombreDestinatario" class="form-label">Destinatario:</label>
            <input asp-for="nombreDestinatario" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="FechaCreacion" class="form-label">Fecha:</label>
            <input asp-for="FechaCreacion" type="date" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Guardar cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
